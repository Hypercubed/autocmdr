var assert = require("assert");
var exec = require('child_process').exec;

describe('<%= @name %> bin', function(){

	it('--help should run without errors', function(done) {
		exec('node ./bin/<%= @name %> --help', function (error, stdout, stderr) {
			assert(!error);
			done();
		});
	});

	it('--version should run without errors', function(done) {
		exec('node ./bin/<%= @name %> --version', function (error, stdout, stderr) {
			assert(!error);
			done();
		});
	});

	it('completion should run without errors', function(done) {
		exec('node ./bin/<%= @name %> completion', function (error, stdout, stderr) {
			assert(!error);
			done();
		});
	});

	it('config should run without errors', function(done) {
		exec('node ./bin/<%= @name %> config', function (error, stdout, stderr) {
			assert(!error);
			done();
		});
	});

});