#!/usr/bin/env node

// node
var path			= require('path');

// autocmdr
var program  = require('../');
var argv = program.normalize(process.argv);

// Plugins
require('../lib/logger.js')(program);
require('../lib/package.js')(program);

if (argv.indexOf('-g') > -1) {  // Global autocmdr
	require('../lib/loader.js')(program);
	require('../lib/config.js')(program);
	require('../lib/eco.js')(program);
} else {
	var cmdspath = path.join(process.cwd(), 'cmds/');
	var configpath = path.join(process.cwd(), '.autocmdr');

	require('../lib/loader.js')(program, { path: cmdspath });
	require('../lib/config.js')(program, { path: configpath });
}

program
	.option('-g, --global', "use global autocmdr tasks");

program
	.on('*', function(name) { 
		program.logger.log('warn', '\''+name+'\' is not a known command. See \''+program._name+' --help\'.');
	});

program.parse(argv);

if (program.args.length < 1 )
	program.outputHelp();